base-color = #ffffff
main-color = #122f5e
accent-color = #5c78a5

body, html
  margin 0
  padding 0
  min-height 100vh

body
font-family 游ゴシック体, 'Yu Gothic', YuGothic, 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', メイリオ, Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif

#wrapper
  display flex
  height 100vh

#page_nav
  flex 1 0 auto
  max-width 200px

  background-color main-color
  color white

  .brand
    margin 0
    padding 0

  ul
    list-style-type none
    padding 0
    margin 0

    li
      margin 0
      padding 0

      a, a:link, a:visited
        color white
        text-decoration none
        display block
        box-sizing border-box
        width 100%
        transition .2s
        padding 10px

      a:hover, a:active, a:focus
        color white
        background-color lighten(main-color, 30%)

#page_container
  flex 1 1 auto
  overflow auto

  h1
    margin 0

#page_content
  word-wrap break-word