base-color = #ffffff
main-color = #122f5e
accent-color = #5c78a5

body, html
  margin 0
  padding 0
  min-height 100vh

#wrapper
  display flex
  height 100vh

#page_nav
  flex 1 0 auto
  max-width 200px

  background-color main-color
  color white

  .brand
    margin 10px
    text-align center

  ul
    list-style-type none
    padding 0

    li
      margin 0
      padding 0

      a, a:link, a:visited
        color white
        text-decoration none
        display block
        box-sizing border-box
        width 100%
        transition .2s
        padding 10px

      a:hover, a:active, a:focus
        color white
        background-color lighten(main-color, 30%)

#page_container
  flex 1 1 auto
  overflow auto

#page_content
  word-wrap break-word